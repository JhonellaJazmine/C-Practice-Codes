// Write a program in C to display the n terms of odd natural number and their sum.
#include <stdio.h>

int main()
{
    //declaration of variables
    int n,sum=0;

    printf("Input number of terms :");  //prompts user to input a number
    scanf("%d",&n);                     //gets a number input from user

    printf("The odd numbers are : ");
    for(int i=0;i<n*2;i++){             //loop for determining odd numbers
        if(i%2!=0){
        printf("%d ",i);              //prints odd numbers
        sum+=i;}                        //adds odd number to the value of sum
    }
    printf("\nThe Sum of odd Natural Number up to %d terms : %d",n,sum);
}
